{
  "name": "superform-validator",
  "version": "1.0.0",
  "description": "A powerful and flexible JavaScript form validator for HTML.",
  "main": "dist/form-validator.js",
  "module": "dist/form-validator.js",
  "scripts": {
    "build": "npx terser src/form-validator.js -o dist/form-validator.js -c -m",
    "prepare": "npm run build",
    "release": "npm run bump-version --",
    "bump-version": "node scripts/release.js",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && git commit --no-verify -m \"chore: update changelog\""
  },
  "keywords": [
    "form",
    "validation",
    "validator",
    "html",
    "javascript",
    "form-validator"
  ],
  "author": "Harshal Khairnar <harshal@hitraa.com>",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/khairnar2960/superform-validator"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^5.0.0",
    "terser": "^5.0.0"
  }
}
